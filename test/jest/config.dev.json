{
  "verbose": true,
  "rootDir": "../../",
  "testURL": "http://localhost",
  "testEnvironment": "node",
  "coverageDirectory": "test/coverage/",
  "testMatch": [
    "<rootDir>/test/unit/*.test.js"
  ],
  "coverageReporters": [
    "html"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "src/**/*.js",
    "!**/node_modules/**"
  ],
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/"
  ]
}
